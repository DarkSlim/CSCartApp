<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:maxWidth="150dp"/>

    <Spinner
        android:id="@+id/attrSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/attrName"
        android:layout_toLeftOf="@+id/attrIcon"
        android:background="@drawable/spinnercount_spinner_background_holo_light"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/attrIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>