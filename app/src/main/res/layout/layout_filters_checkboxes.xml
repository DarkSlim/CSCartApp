<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/filtersLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_unfilled_square">

            <RelativeLayout
                android:id="@+id/ldescH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_exp_list"
                android:clickable="true">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/orders_search_title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_toLeftOf="@+id/arrow1"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_small"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/firstEmp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C7C7C7"
                android:layout_below="@+id/ldescH"/>

            <RelativeLayout
                android:id="@+id/ldesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstEmp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>