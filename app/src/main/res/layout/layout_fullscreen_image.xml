<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <gr.plushost.prototypeapp.widgets.TouchImageView
        android:id="@+id/imgDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="#000000"/>

    <com.todddavies.components.progressbar.ProgressWheel
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/progressBarFull"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        ProgressWheel:rimColor="#770097D6"
        ProgressWheel:barColor="#0097D6"
        ProgressWheel:barLength="3dp"
        ProgressWheel:barWidth="1dp"
        ProgressWheel:rimWidth="1dp"
        ProgressWheel:contourColor="#330097D6"/>


</RelativeLayout>