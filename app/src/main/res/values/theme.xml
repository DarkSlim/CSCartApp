<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BasicTheme.ActionBar" parent="DarkTheme.ActionBar"/>
    <style name="BasicTheme.Popup" parent="DarkTheme.Popup"/>
    <style name="BasicTheme" parent="DarkTheme"/>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#FF888888</item>
        <item name="strokeColor">#FF000000</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="strokeWidth">2dp</item>
        <item name="lineWidth">12dp</item>
        <item name="unselectedColor">#FF888888</item>
        <item name="selectedColor">#FF880000</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="fadeLength">400</item>
        <item name="fadeDelay">300</item>
    </style>

</resources>